<Window x:Class="ArrayListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayListApp"
        mc:Ignorable="d"
        Title="ArrayListApp" Height="450" Width="800">
    <Grid>
        <Button x:Name="button_add" Content="Add" HorizontalAlignment="Left" Margin="125,220,0,0" VerticalAlignment="Top" Width="145" Height="60" FontSize="18" Click="button_add_Click"/>
        <Button x:Name="button_remove" Content="Remove" HorizontalAlignment="Left" Margin="325,220,0,0" VerticalAlignment="Top" Width="145" Height="60" FontSize="18" Click="button_remove_Click"/>
        <Button x:Name="button_showAll" Content="Show All" HorizontalAlignment="Left" Margin="525,220,0,0" VerticalAlignment="Top" Width="145" Height="60" FontSize="18" Click="button_showAll_Click"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="35" Margin="125,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="545" FontSize="22"/>

    </Grid>
</Window>
